{
  "schemes": {
    "OAuth2ClientCredentials": {
      "type": "oauth2",
      "description": "OAuth2 Client Credentials Flow",
      "flows": {
        "clientCredentials": {
          "tokenUrl": "https://auth.example.com/oauth/token",
          "scopes": {
            "read:data": "Read access to data",
            "write:data": "Write access to data",
            "admin": "Administrator access"
          }
        }
      }
    }
  },
  "security": [
    {
      "OAuth2ClientCredentials": [
        "read:data",
        "write:data"
      ]
    }
  ]
}
