{
  "name": "@openapi-to-mcp/cli",
  "version": "0.1.0",
  "description": "Command-line interface for OpenAPI-to-MCP generator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "openapi-to-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external fs-extra",
    "dev": "tsup src/index.ts --format esm --watch --external fs-extra",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openapi-to-mcp/generator": "workspace:*",
    "@openapi-to-mcp/parser": "workspace:*",
    "chalk": "5.3.0",
    "cli-progress": "^3.12.0",
    "commander": "11.1.0",
    "debug": "4.3.4",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/debug": "4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/uuid": "9.0.7",
    "execa": "^9.6.0",
    "fs-extra": "11.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
