{
  "name": "@openapi-to-mcp/generator",
  "version": "0.1.0",
  "description": "Code generation engine for MCP servers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --external fs-extra",
    "dev": "tsup src/index.ts --format esm --watch --external fs-extra",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openapi-to-mcp/parser": "workspace:*",
    "debug": "4.3.4",
    "fs-extra": "11.2.0",
    "handlebars": "4.7.8",
    "prettier": "3.2.4"
  },
  "devDependencies": {
    "@types/debug": "4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/handlebars": "4.1.0",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.1",
    "type-coverage": "^2.29.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
